{{!-- New form --}}

<div class="container py-5 my-5" style="background-color: #f4eed6" id="signup">

    
<form action="/auth/signup" method="post" enctype="multipart/form-data">


<section class="h-100 h-custom" >


  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://thumbs.dreamstime.com/b/gato-y-perro-del-grupo-44857252.jpg"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">


            {{#if errorMessage}}

        <div class="alertSignUp">
          
          <a href="/auth/signup">
          <span
            class="closebtn"
            onclick="this.parentElement.style.display='none';"
          >&times;</span>
          </a>
          <p style="display:flex;justify-content: center;margin-left: 50px;;margin-top: 10px;"><strong>Error:</strong>
          {{errorMessage}}</p>
        </div>
        <div style="display:flex;justify-content: center">
          <img class="imgErrorprofileUser"  src="https://c.tenor.com/cqnZ1RW_XjsAAAAM/horny-bonk.gif" alt="">
          </div>
      {{/if}}

            

          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

            <form class="px-md-2">

              <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" name="username"/>
                <label class="form-label" for="form3Example1q">Name</label>
              </div>

              <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" name="lastname"/>
                <label class="form-label" for="form3Example1q">LastName</label>
              </div>

              <div class="form-outline mb-4">
                <input type="number" id="form3Example1q" class="form-control" name="number"/>
                <label class="form-label" for="form3Example1q">Number phone</label>
              </div>

              <div class="form-outline mb-4">
                <input type="email" id="form3Example1q" class="form-control" name="email"/>
                <label class="form-label" for="form3Example1q">Email</label>
              </div>

              <div class="form-outline mb-4">
                <input type="password" id="form3Example1q" class="form-control" name="password"/>
                <label class="form-label" for="form3Example1q">Password <small class="text-muted"> => Requires at least 8 letters, 1 uppercase, 1 lowercase, no special characters allowed such as @, #, $, etc.</small></label>
              </div>

              <div class="form-outline mb-4">
                <div class="col-md-7 mb-5">

                  <div class="mb-3">
                    <label for="formFile" class="form-label">Image:</label>
                    <input class="form-control" type="file" id="formFile" name="profile_pic">
                  </div>

                </div>
              </div>

              <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>

            </form>
          
          <div class="access">
               <br>
               <p>Do you have an account?</p>
               <button class="btn btn-secondary btn-lg ms-2"><a href="/auth/login" >Access</a></button>
          </div>

          

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</form>

</div>